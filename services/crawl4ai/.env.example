# Bevyly Crawl4AI Service Configuration

# Service settings
HOST=0.0.0.0
PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# OpenAI (for prompt parsing - optional but recommended)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.3

# Google Custom Search API (optional - can be passed per request)
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Google Maps/Places API (optional)
GOOGLE_MAPS_API_KEY=

# Rate limiting
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT_SECONDS=30
MAX_PAGES_PER_CRAWL=10

# Cache settings
CACHE_TTL_SECONDS=3600
